#include <iostream>
using namespace std;
class Student {
    string name, regNo, roomNo, password;
    int totalMeals;

public:
    void inputStudentData() {
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Registration No: ";
        cin >> regNo;
        cout << "Enter Room No: ";
        cin >> roomNo;
        cout << "Enter Password: ";
        cin >> password;
        totalMeals = 0;  // default value
    }
    void displayStudent() {
        cout << "Name: " << name << " | RegNo: " << regNo << " | Room: " << roomNo << endl;
    }
    string getRegNo() { return regNo; }
    string getPassword() { return password; }
};
class Admin{
};

